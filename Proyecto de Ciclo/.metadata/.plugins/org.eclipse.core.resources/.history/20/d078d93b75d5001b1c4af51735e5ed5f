package interfases;

import java.awt.EventQueue;

import javax.swing.JDialog;
import javax.swing.JButton;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;
import javax.swing.JPanel;
import javax.swing.JTextField;

import arreglos.ArregloAlumno;
import clases.Alumno;

import javax.swing.JScrollPane;
import java.awt.TextArea;
import javax.swing.JTextArea;

public class _08ReporteAlumnosMatriculaPendiente extends JDialog {
	
	private static final long serialVersionUID = 1L;
	private JScrollPane scp;
	private JTextArea txtS;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					_08ReporteAlumnosMatriculaPendiente dialog = new _08ReporteAlumnosMatriculaPendiente();
					dialog.setDefaultCloseOperation(JDialog.DISPOSE_ON_CLOSE);
					dialog.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the dialog.
	 */
	public _08ReporteAlumnosMatriculaPendiente() {
		setTitle("Reporte/Matricula Pendiente");
		setBounds(100, 100, 450, 300);
		getContentPane().setLayout(null);
		
		scp = new JScrollPane();
		scp.setBounds(10, 11, 414, 239);
		getContentPane().add(scp);
		
		txtS = new JTextArea();
		txtS.setEditable(false);
		scp.setViewportView(txtS);
		listar();
	}
	
//  Métodos tipo void (sin parámetros)
	void imprimir() {
		imprimir("");
	}
	void listar() {
		ArregloAlumno aa = new ArregloAlumno();
		Alumno a;
		txtS.setText("");
		for (int i=0; i<aa.tamaño(); i++) {
			a = aa.obtener(i);
			if (a.getEstado() == 0) {
				a = aa.buscarAlumno(a.getCodAlumno());
				imprimir("Código de Alumno   :  " + a.getCodAlumno());
				imprimir("Nombre             :  " + a.getNombres());
				imprimir("Apellidos           :  " + a.getApellidos());
				imprimir("DNI                     :  " + a.getDNI());
				imprimir("Edad                  :  " + a.getEdad());
				imprimir("Celular              : " +a.getCelular());
				imprimir();
			
			}
		}
	}
	//  Métodos tipo void (con parámetros)
	void imprimir(String s) {
		txtS.append(s + "\n");
	}
}